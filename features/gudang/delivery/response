package delivery

import (
	"warehouse/features/gudang"
)

type GudangResponse struct {
	ID       uint   `json:"id"`
	Name     string `json:"name,omitempty"`
	Photo    string `json:"photo,omitempty"`
	Harga    int    `json:"harga,omitempty"`
	Location string `json:"location,omitempty"`
}

func fromCore(data gudang.Core) GudangResponse {
	return GudangResponse{
		ID:       int(data.ID),
		Name:     data.Name,
		Photo:    data.Photo,
		Harga:    data.Harga,
		Location: data.Location,
	}
}

func fromCoreList(data []gudang.Core) []GudangResponse {
	var dataRes []GudangResponse
	for _, v := range data {
		dataRes = append(dataRes, MenteeResponse{
			ID:       v.ID,
			Name:     v.Name,
			Photo:    v.Photo,
			Harga:    v.Harga,
			Location: v.Location,
		})
	}

	return dataRes
}
